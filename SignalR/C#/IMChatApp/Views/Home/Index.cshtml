@model IMChatApp.Models.Login
<div class="jumbotron">
    <h1>SignalR Chat </h1>
    <p class="lead">Login to enter chat</p>
    
    <div class="login-wrap">


        @using (Html.BeginForm("Chat", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Use a local account to log in.</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m => m.UserNick, new { @class = "control-label col-md-1" })
                @Html.TextBoxFor(m => m.UserNick, new { @class = "col-md-2 form-control" })
                @Html.ValidationMessageFor(m => m.UserNick)
            </div> 
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value=" Enter Chat &raquo;" class="btn btn-primary btn-large " />
                </div>
            </div>
            <p>
                
            </p>
        }



